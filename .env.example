# ===========================================
# ZENT AGENTIC LAUNCHPAD - ENVIRONMENT CONFIG
# ===========================================
# Copy this file to .env and fill in your values
# NEVER commit .env to version control!
# ===========================================

# -------------------------------------------
# SERVER CONFIGURATION
# -------------------------------------------
PORT=3000
NODE_ENV=production

# Set to true when deploying to Render.com
# This changes file paths to use /data for persistence
RENDER=false

# -------------------------------------------
# SOLANA BLOCKCHAIN
# -------------------------------------------
# RPC endpoint (use a premium RPC for production)
SOLANA_RPC_URL=https://api.mainnet-beta.solana.com

# Your deployer wallet private key (base58 encoded)
# Generate with: solana-keygen new
# Export with: cat keypair.json | base58
WALLET_SECRET=your_base58_encoded_private_key_here

# -------------------------------------------
# PINATA IPFS (for metadata storage)
# -------------------------------------------
# Get your JWT from: https://app.pinata.cloud/keys
PINATA_JWT=your_pinata_jwt_token_here

# Your Pinata gateway URL (without https://)
# Default: gateway.pinata.cloud
# For dedicated gateway: your-gateway.mypinata.cloud
GATEWAY_URL=gateway.pinata.cloud

# -------------------------------------------
# CLAUDE AI (for Agentic Terminal)
# -------------------------------------------
# Get your API key from: https://console.anthropic.com
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Model to use (recommended: claude-opus-4-5-20251101)
CLAUDE_MODEL=claude-opus-4-5-20251101

# Max tokens for AI responses
CLAUDE_MAX_TOKENS=2048

# -------------------------------------------
# PLATFORM CONFIGURATION
# -------------------------------------------
# Platform fee in lamports (50000000 = 0.05 SOL)
PLATFORM_FEE_LAMPORTS=50000000

# Admin wallet address (bypasses restrictions)
ADMIN_WALLET=your_admin_wallet_address_here

# Authorized launcher wallet (for restricted launches)
# Leave empty to allow anyone to launch
ALLOWED_LAUNCHER_WALLET=

# -------------------------------------------
# COUNTDOWN (Optional)
# -------------------------------------------
# Fixed countdown end time (ISO format)
# Example: 2025-12-15T09:00:00Z
COUNTDOWN_END_TIME=

# -------------------------------------------
# FEATURE FLAGS
# -------------------------------------------
ENABLE_AGENTIC_TERMINAL=true
ENABLE_FEE_CLAIMS=true
ENABLE_COMMENTS=true
ENABLE_LEADERBOARD=true

# -------------------------------------------
# RATE LIMITING (Optional)
# -------------------------------------------
# Requests per minute per IP
RATE_LIMIT_RPM=100

# -------------------------------------------
# CORS (Optional)
# -------------------------------------------
# Allowed origins (comma-separated)
# Leave empty to allow all origins
CORS_ORIGINS=

# -------------------------------------------
# LOGGING
# -------------------------------------------
LOG_LEVEL=info
